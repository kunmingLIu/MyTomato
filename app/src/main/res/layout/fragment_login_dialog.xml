<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/dkgray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtDivide"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/white"
            android:textSize="44dp" />

        <TextView
            android:id="@+id/txtHour"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/txtDivide"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/aqua"
            android:textSize="44dp" />

        <TextView
            android:id="@+id/txtMin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/txtDivide"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/white"
            android:textSize="44dp" />

        <TextView
            android:id="@+id/txtAM"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@id/txtHour"
            android:gravity="center"
            android:text="@string/am"
            android:textColor="@color/aqua"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/txtPM"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_below="@+id/txtAM"
            android:layout_toLeftOf="@id/txtHour"
            android:gravity="center"
            android:text="@string/pm"
            android:textColor="@color/white"
            android:textSize="16dp" />


        <com.example.kunmingliu.mytomato.View.ClockViewWithPath
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/txtPM"
            android:id="@+id/clock"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/txtOK"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="ok"
            android:textColor="@color/aqua"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txtCancel"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/txtOK"
            android:gravity="center"
            android:text="cancel"
            android:textColor="@color/aqua"
            android:textSize="16dp" />


    </RelativeLayout>


</FrameLayout>